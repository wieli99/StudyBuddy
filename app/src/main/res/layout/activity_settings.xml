<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Settings"
    android:id="@+id/settingsCL">


    <View
        android:id="@+id/rectangleTopPotsShop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_corners"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/titleSettings"
        app:layout_constraintEnd_toStartOf="@+id/guideline18"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="28dp"
        android:elevation="6dp"
        android:text="@string/settings_title"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rectangleBackgroundNameSettings"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_light_gray"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline18"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/rectangleTopPotsShop" />

    <TextView
        android:id="@+id/nameSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="@string/name_setting_title"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintTop_toTopOf="@+id/rectangleBackgroundNameSettings" />

    <EditText
        android:id="@+id/editNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="@string/name_setting_hint"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:outlineProvider="none"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toTopOf="@+id/saveNameSettingsButton"
        app:layout_constraintEnd_toEndOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintTop_toBottomOf="@+id/nameSetting" />

    <Button
        android:id="@+id/saveNameSettingsButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        android:text="@string/save"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintTop_toBottomOf="@+id/rectangleBackgroundNameSettings" />

    <View
        android:id="@+id/rectangleBackgroundTimeSettings"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_light_gray"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline18"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/saveNameSettingsButton" />

    <TextView
        android:id="@+id/timeSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="@string/time_setting_title"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangleBackgroundTimeSettings"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackgroundNameSettings"
        app:layout_constraintTop_toTopOf="@+id/rectangleBackgroundTimeSettings" />

    <EditText
        android:id="@+id/editTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="6dp"
        android:ems="10"
        android:hint="@string/time_setting_hint"
        android:importantForAutofill="no"
        android:inputType="number"
        android:outlineProvider="none"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/rectangleBackgroundTimeSettings"
        app:layout_constraintEnd_toEndOf="@+id/rectangleBackgroundTimeSettings"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackgroundTimeSettings"
        app:layout_constraintTop_toBottomOf="@+id/timeSetting" />

    <Button
        android:id="@+id/saveTimeSettingsButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        android:text="@string/save"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangleBackgroundTimeSettings"
        app:layout_constraintStart_toStartOf="@+id/rectangleBackgroundTimeSettings"
        app:layout_constraintTop_toBottomOf="@+id/rectangleBackgroundTimeSettings" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>