            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/potsBackRectangleShop6"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop6"
            app:srcCompat="@drawable/pot6" />

        <Button
            android:id="@+id/buyPotButton6"
            android:layout_width="130dp"
