<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        tools:context=".ShopPots"
        android:id="@+id/shopPotsCL">


        <View
            android:id="@+id/rectangleTopPotsShop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/titlePotsShop"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/moneyPotsShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="6dp"
            android:text="@string/default_money_value"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titlePotsShop"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="28dp"
            android:elevation="6dp"
            android:text="@string/shop_pots_titel"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/potsBackRectangleShop"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners_light_gray"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/titlePotsShop" />

        <ImageView
            android:id="@+id/potImageShop"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/pot_image_description"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/potsBackRectangleShop"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop"
            app:srcCompat="@drawable/pot1" />

        <Button
            android:id="@+id/buyPotButton"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/button_selector"
            android:elevation="5dp"
            android:stateListAnimator="@null"
            android:text="@string/buy_pot_button"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/potsBackRectangleShop"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop"
            app:layout_constraintTop_toBottomOf="@+id/potsBackRectangleShop" />

        <View
            android:id="@+id/potsBackRectangleShop2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners_light_gray"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/titlePotsShop" />

        <ImageView
            android:id="@+id/potImageShop2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/pot_image_description"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/potsBackRectangleShop2"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop2"
            app:srcCompat="@drawable/pot2" />

        <Button
            android:id="@+id/buyPotButton2"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/button_selector"
            android:elevation="5dp"
            android:stateListAnimator="@null"
            android:text="@string/buy_pot_button2"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/potsBackRectangleShop2"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop2"
            app:layout_constraintTop_toBottomOf="@+id/potsBackRectangleShop2" />

        <View
            android:id="@+id/potsBackRectangleShop3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners_light_gray"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/buyPotButton" />

        <ImageView
            android:id="@+id/potImageShop3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/pot_image_description"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/potsBackRectangleShop3"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop3"
            app:srcCompat="@drawable/pot3" />

        <Button
            android:id="@+id/buyPotButton3"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/button_selector"
            android:elevation="5dp"
            android:stateListAnimator="@null"
            android:text="@string/buy_pot_button3"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/potsBackRectangleShop3"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop3"
            app:layout_constraintTop_toBottomOf="@+id/potsBackRectangleShop3" />

        <View
            android:id="@+id/potsBackRectangleShop4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners_light_gray"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/buyPotButton2" />

        <ImageView
            android:id="@+id/potImageShop4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/pot_image_description"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/potsBackRectangleShop4"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop4"
            app:srcCompat="@drawable/pot4" />

        <Button
            android:id="@+id/buyPotButton4"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/button_selector"
            android:elevation="5dp"
            android:stateListAnimator="@null"
            android:text="@string/buy_pot_button4"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/potsBackRectangleShop4"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop4"
            app:layout_constraintTop_toBottomOf="@+id/potsBackRectangleShop4" />

        <View
            android:id="@+id/potsBackRectangleShop5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners_light_gray"
            android:elevation="5dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/buyPotButton3" />

        <ImageView
            android:id="@+id/potImageShop5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/pot_image_description"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/potsBackRectangleShop5"
            app:layout_constraintStart_toStartOf="@+id/potsBackRectangleShop5"
            app:srcCompat="@drawable/pot5" />

        <Button
            android:id="@+id/buyPotButton5"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/button_selector"
            android:elevation="5dp"
