        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundsBackRectangleShop2"
        app:layout_constraintStart_toStartOf="@+id/backgroundsBackRectangleShop2"
        app:layout_constraintTop_toBottomOf="@+id/backgroundsBackRectangleShop2" />

    <View
        android:id="@+id/backgroundsBackRectangleShop3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_light_gray"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toBottomOf="@+id/buyBackgroundButton" />

    <ImageView
        android:id="@+id/backgroundImageShop3"
        android:layout_width="120dp"
        android:layout_height="120dp"
