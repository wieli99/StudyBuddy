        android:layout_height="44dp"
        android:background="@drawable/button_selector"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        android:text="@string/buy_background_button3"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundsBackRectangleShop3"
        app:layout_constraintStart_toStartOf="@+id/backgroundsBackRectangleShop3"
        app:layout_constraintTop_toBottomOf="@+id/backgroundsBackRectangleShop3" />

    <View
        android:id="@+id/backgroundsBackRectangleShop4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_light_gray"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/buyBackgroundButton2" />

    <ImageView
        android:id="@+id/backgroundImageShop4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/background_image_description"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundsBackRectangleShop4"
        app:layout_constraintStart_toStartOf="@+id/backgroundsBackRectangleShop4"
        app:srcCompat="@drawable/wallpaper" />

    <Button
        android:id="@+id/buyBackgroundButton4"
        android:layout_width="130dp"
        android:layout_height="44dp"
